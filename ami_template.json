{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-9887c6e7",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "Masterchef AMI {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo yum update -y",
        "curl -sL https://rpm.nodesource.com/setup_12.x | sudo bash -",
        "sudo yum install -y nodejs",
        "mkdir /home/centos/node-app",
        "chown centos:centos /home/centos/node-app"
      ]
    },
    {
      "type": "file",
      "source": "../../ccwebapp",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "mv /tmp/ccwebapp /home/centos/node-app/",
        "cd /home/centos/node-app/ccwebapp/webapp/assignment2",
        "npm install"
      ]
    }
  ]
}
